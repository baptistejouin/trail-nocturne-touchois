---
import "../css/icon.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Le Trail Nocturne Touchois ou TNT se déroulera le 25 novembre 2023. Départ à 19h30 pour le 12km et 19h00 pour le 24km. Ouverture des inscriptions le 24 juin 2023 et clôture des inscriptions le 22 novembre 2023"
		/>
		<meta name="viewport" content="width=device-width" />
		<link
			rel="shortcut icon"
			href="img/favicon/32x32.png"
			type="image/png"
			sizes="32x32"
		/>
		<link
			rel="shortcut icon"
			href="img/favicon/180x180.png"
			type="image/png"
			sizes="180x180"
		/>
		<meta name="generator" content={Astro.generator} />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css"
		/>
		<!--[if (lt IE 9)]><script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/min/tiny-slider.helper.ie8.js"></script><![endif]-->
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap");

	html {
		scroll-behavior: smooth;
	}
	*,
	::before,
	::after {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	:root {
		--primary-color: #f40d36ff;
		--black: #0f0f0fff;
		--white: #fbfbfbff;
	}
	body {
		font: normal 400 16px "Roboto", Arial, Helvetica, sans-serif;
		color: var(--black);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
		height: 100vh;
		min-height: 560px;
	}
	p {
		line-height: 1.6em;
	}
	section {
		margin-top: 3em;
		margin-bottom: 3em;
	}
	h1 {
		color: var(--primary-color);
		font-size: 2.5em;
	}
	h2 {
		color: var(--primary-color);
		font-size: 2em;
		font-weight: 300;
	}
	h2::after {
		content: "";
		display: block;
		margin: 0.5em 0;
		width: 60%;
		height: 2px;
		background-color: var(--primary-color);
	}
	h2 span {
		font-weight: 400;
	}
	li {
		list-style: none;
	}

	a {
		text-decoration: none;
		color: inherit;
	}
	iframe {
		border: none;
		width: 100%;
		height: 100%;
	}
	img {
		width: 100%;
		height: auto;
	}
	hr {
		width: 75%;
		border: 1px solid var(--white);
		margin: 0 auto;
	}
	button {
		cursor: pointer;
		all: unset;
	}
	.visuallyhidden {
		position: absolute;
		clip: rect(1px, 1px, 1px, 1px);
		-webkit-clip-path: inset(0px 0px 99.9% 99.9%);
		clip-path: inset(0px 0px 99.9% 99.9%);
		overflow: hidden;
		height: 1px;
		width: 1px;
		padding: 0;
		border: 0;
	}
	.visuallyhidden::after,
	.visuallyhidden::before {
		display: none;
	}
	[id] {
		scroll-margin-top: 2rem;
	}
	.container {
		max-width: 1200px;
		width: 100%;
		margin-inline: auto;
		padding-inline: 2rem;
	}
	.skew-open {
		width: 100%;
		height: 70px;
		background: linear-gradient(
			to left bottom,
			#fff 49.5%,
			var(--black) 50%
		);
	}
	.skew-close {
		width: 100%;
		height: 70px;
		background: linear-gradient(
			to left bottom,
			var(--black) 49.5%,
			#fff 50%
		);
	}
</style>
