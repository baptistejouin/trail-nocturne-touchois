---
import Anchor from "../Anchor.astro";
---

<section id="gallery" class="container">
	<h2><strong>Photos</strong> de 2022</h2>
	<div class="photos">
		<img
			class="photo js-openEnlarge"
			src="img/tnt-2019/IMG-1.jpeg"
			alt="Ravitaillement à mi parcours"
			loading="lazy"
		/>
